<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <div class="auth-container">
        <div class="home-title">URL Shortener</div>
        <% if(locals.id) { %>
            <div class="short-url">
                URL Generated: <a href="http://localhost:3000/<%= id %>" target="_blank">http://localhost:3000/<%= id %></a>
            </div>
        <% } %>
        <form class="url-form" method="POST" action="/url">
            <label>Enter Your Original URL</label>
            <input type="text" name="url" placeholder="https://example.com" required>
            <button type="submit">Generate</button>
        </form>
        <% if (locals.urls) { %>
            <table class="url-table">
                <thead>
                    <tr>
                        <th>Sr.No</th>
                        <th>ShortId</th>
                        <th>RedirectURL</th>
                        <th>Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 0; i < urls.length; i++) { %>
                        <tr>
                            <td><%= i + 1 %></td>
                            <td><%= urls[i].shortId %></td>
                            <td style="word-break:break-all;"><%= urls[i].redirectURL %></td>
                            <td><%= urls[i].visitHistory.length%></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html>